<Window x:Class="Goods.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goods"
        mc:Ignorable="d"
        Title="ООО «Обувь»" Icon="/Resources/Icon.png" Height="800" Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#7FFF00">
            <Image HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20" Source="/Resources/Icon.png"></Image>
            <TextBlock FontSize="58" HorizontalAlignment="Center" VerticalAlignment="Center">Авторизация</TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="480">
                <Grid Margin="0 0 0 20">
                    <TextBlock HorizontalAlignment="Left" FontSize="32">Логин</TextBlock>
                    <TextBox Name="loginTextBox" HorizontalAlignment="Right" FontSize="32" MinWidth="370"></TextBox>
                </Grid>
                <Grid Margin="0 0 0 20">
                    <TextBlock HorizontalAlignment="Left" FontSize="32">Пароль</TextBlock>
                    <PasswordBox Name="passwordBox" HorizontalAlignment="Right" FontSize="32" MinWidth="370"></PasswordBox>
                </Grid>
                <Button Margin="0 0 0 20" FontSize="32" Click="Button_Click">Войти</Button>
                <Button FontSize="32" Click="Button_Click_1">Войти как гость</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
