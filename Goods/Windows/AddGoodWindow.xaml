<Window x:Class="Goods.Windows.AddGoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goods.Windows"
        mc:Ignorable="d"
        Title="Добавление товара"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть -->
        <StackPanel Grid.Column="0" Margin="0 0 20 0">

            <TextBlock FontSize="32" Margin="0 0 0 20">Добавление товара</TextBlock>

            <TextBlock>Артикул</TextBlock>
            <TextBox x:Name="NumberTextBox"/>

            <TextBlock>Название</TextBlock>
            <TextBox x:Name="NameTextBox"/>

            <TextBlock>Категория</TextBlock>
            <ComboBox x:Name="CategoryComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>

            <TextBlock>Производитель</TextBlock>
            <ComboBox x:Name="ManufacturerComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>

            <TextBlock>Поставщик</TextBlock>
            <ComboBox x:Name="SupplierComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>

            <TextBlock>Ед. измерения</TextBlock>
            <ComboBox x:Name="MessureUnitComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>

            <TextBlock>Цена</TextBlock>
            <TextBox x:Name="PriceTextBox"/>

            <TextBlock>Скидка (%)</TextBlock>
            <TextBox x:Name="DiscountTextBox"/>

            <TextBlock>Количество</TextBlock>
            <TextBox x:Name="QuantityTextBox"/>

            <TextBlock>Описание</TextBlock>
            <TextBox x:Name="DescriptionTextBox"
                     AcceptsReturn="True"
                     Height="100"/>

            <Button Margin="0 20 0 0"
                    Height="40"
                    FontSize="20"
                    Click="SaveButton_Click">
                Сохранить
            </Button>
        </StackPanel>

        <!-- Правая часть -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center">

            <Border BorderThickness="1" BorderBrush="Black" Padding="5">
                <Image x:Name="GoodImage"
                       Width="300"
                       Height="200"
                       Stretch="Uniform"
                       Source="/Resources/picture.png"/>
            </Border>

            <Button Margin="0 20 0 0"
                    Height="40"
                    FontSize="18"
                    Click="SelectImageButton_Click">
                Выбрать изображение
            </Button>
        </StackPanel>
    </Grid>
</Window>
