<Window x:Class="Goods.Windows.GoodsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goods.Windows"
        mc:Ignorable="d"
        Title="ООО «Обувь»" Icon="/Resources/Icon.png" Height="800" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#7FFF00">
            <Image HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20" Source="/Resources/Icon.png"></Image>
            <TextBlock FontSize="58" HorizontalAlignment="Center" VerticalAlignment="Center">Товары</TextBlock>
            <StackPanel Margin="0 0 20 0" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Margin="0 0 0 10" Name="userNameTextBlock"  FontSize="32" >Гость</TextBlock>
                <Button FontSize="32" Padding="5 2" Click="Button_Click">Выйти</Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Margin="10" Orientation="Horizontal"  Name="controlPanelGrid" Visibility="Hidden">
                <Grid MinWidth="320" Margin="0 0 20 0">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="28">Поиск</TextBlock>
                    <TextBox Name="searchTextBox" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="28" MinWidth="230"></TextBox>
                </Grid>
                <Grid MinWidth="500" Margin="0 0 20 0">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="28">Поле для сортировки</TextBlock>
                    <ComboBox Name="columnForSortComboBox" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="28" MinWidth="230"></ComboBox>
                </Grid>
                <Grid MinWidth="430">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="28">Сортировать по</TextBlock>
                    <ComboBox Name="sortTypeComboBox" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="28" MinWidth="230"></ComboBox>
                </Grid>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="GoodsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="2"
                        BorderBrush="Black"
                        Margin="10"
                        Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Фото -->
                                    <Border Grid.Column="0"
                                BorderThickness="1"
                                BorderBrush="Black"
                                Padding="5">
                                        <Image Width="160"
                                   Height="160"
                                   Stretch="Uniform"
                                   Source="{Binding ImagePath}"/>
                                    </Border>

                                    <!-- Информация -->
                                    <StackPanel Grid.Column="1"
                                    Margin="15 0"
                                    >
                                        <TextBlock FontSize="26"
                                       FontWeight="Bold">
                                <Run Text="{Binding CategoryName}"/>
                                <Run Text=" | "/>
                                <Run Text="{Binding Name}"/>
                                        </TextBlock>

                                        <TextBlock FontSize="18"
                                       Text="{Binding Description}"
                                       TextWrapping="Wrap"
                                       Margin="0 5"/>

                                        <TextBlock FontSize="18">
                                <Run Text="Производитель: "/>
                                <Run Text="{Binding Manufacturer}"/>
                                        </TextBlock>

                                        <TextBlock FontSize="18">
                                <Run Text="Поставщик: "/>
                                <Run Text="{Binding Supplier}"/>
                                        </TextBlock>

                                        <TextBlock FontSize="18">
                                <Run Text="Цена: "/>
                                <Run Text="{Binding Price}"/>
                                <Run Text=" ₽"/>
                                        </TextBlock>

                                        <TextBlock FontSize="18">
                                <Run Text="Ед. измерения: "/>
                                <Run Text="{Binding MessureUnit}"/>
                                        </TextBlock>

                                        <TextBlock FontSize="18">
                                <Run Text="На складе: "/>
                                <Run Text="{Binding Quantity}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Скидка -->
                                    <Border Grid.Column="2"
                                BorderThickness="1"
                                BorderBrush="Black"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="10">
                                        <TextBlock FontFamily="Times New Roman"
                                       FontSize="18"
                                       TextAlignment="Center">
                                <Run Text="Действующая скидка"/>
                                <LineBreak/>
                                <Run Text="{Binding Discount}"/>
                                <Run Text="%"/>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
